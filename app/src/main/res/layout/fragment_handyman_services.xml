<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <!-- Secci贸n de Header con T铆tulo y Bot贸n de Logout -->
    <LinearLayout
        android:id="@+id/lLHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Alineaci贸n de ProHiring a la izquierda -->
        <TextView
            android:id="@+id/proHiringLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProHiring"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_weight="1" />

        <!-- Bot贸n de retroceso -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>

    <!-- Secci贸n de T铆tulos -->
    <LinearLayout
        android:id="@+id/lLTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/lLHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/treeServicesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handyman Services"
            android:textSize="18sp"
            android:textColor="@color/secondayColor"
            android:textStyle="bold"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/discoverText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore a wide range of handyman services offered by various companies and find the perfect solution for your needs. Whether it's home repairs, maintenance, or improvements, discover reliable professionals who can help bring your projects to life with ease and efficiency. "
            android:textSize="16sp"
            android:lineSpacingExtra="4sp"
            android:layout_marginTop="16dp"
            android:justificationMode="inter_word" />
    </LinearLayout>

    <!-- RecyclerView para mostrar la lista de servicios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/lLTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
