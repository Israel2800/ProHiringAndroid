<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProHiring"
            android:textSize="34sp"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to your projects,"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Email"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plan your professional projects with this planner. Here you can add, modify and delete your projects!"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:layout_margin="16dp"
        android:justificationMode="inter_word"
        android:layout_gravity="start" />

    <EditText
        android:id="@+id/serviceNameTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insert a project"
        android:inputType="text"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/serviceColorPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/addServiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Service"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/deleteServiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Service" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/serviceTableView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp" />
</LinearLayout>
