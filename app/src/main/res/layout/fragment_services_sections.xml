<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ServicesSectionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/proHiringLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ProHiring"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:layout_weight="1" />


        </LinearLayout>


        <!-- Description Text -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore all kind of services that companies offer!"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Tree Services Section -->
        <LinearLayout
            android:id="@+id/treeServicesSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivTreeServices"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_tree_services"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTreeServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tree Services"
                android:textColor="@color/secondayColor"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Handyman Services Section -->
        <LinearLayout
            android:id="@+id/handymanServicesSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHandymanServices"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_handyman_services"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvHandymanServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Handyman Services"
                android:textColor="@color/secondayColor"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
