<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- App Name -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ProHiring"
        android:textSize="34sp"
        android:textColor="@color/primary_color"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Let’s create your Pro account."
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <!-- Email Field -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailFieldC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:importantForAccessibility="yes" />

    <!-- Password Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordFieldC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:importantForAccessibility="yes" />

        <!-- Toggle password visibility button -->
        <ImageButton
            android:id="@+id/togglePasswordVisibilityButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_eye"
            android:contentDescription="Toggle password visibility"
            android:importantForAccessibility="yes"
            android:onClick="togglePasswordVisibility" />
    </LinearLayout>

    <!-- Company Name Field -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/companyNameFieldC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Nombre de la Compañía"
        android:importantForAccessibility="yes" />

    <!-- Services Field -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/servicesFieldC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Servicios ofrecidos"
        android:importantForAccessibility="yes" />

    <!-- Social Media Field -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/socialMediaFieldC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Redes Sociales"
        android:importantForAccessibility="yes" />

    <!-- Contact Information Field -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/contactFieldC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Información de Contacto"
        android:importantForAccessibility="yes" />

    <!-- Logo Upload Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/logoImageViewC"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/house"
            android:contentDescription="Logo de la empresa" />

        <!-- Button to select logo -->
        <Button
            android:id="@+id/selectLogoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select logo"
            android:backgroundTint="#D3D3D3"
            android:textColor="#007AFF"
            android:onClick="selectLogoTapped" />
    </LinearLayout>

    <!-- Button to create the company account -->
    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create Account"
        android:onClick="createAccountTapped"
        android:importantForAccessibility="yes" />

    <!-- Sign-in Link -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textSize="14sp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/signInBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textSize="14sp"
            android:textColor="#007AFF"
            android:layout_marginStart="4dp"
            android:layout_gravity="end"
            android:onClick="signInTapped"/>
    </LinearLayout>

    <!-- Activity Indicator (loading spinner) -->
    <ProgressBar
        android:id="@+id/activityIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</LinearLayout>
